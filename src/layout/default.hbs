{{!-- Main page --}}
<html>
  <head>
    <title>
      {{page.title}}
    </title>
    <meta charset='utf-8' />
    <link href='css/index.css' rel='stylesheet' />
	<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  </head>
{{!-- ---------------------------------------------------------------------------------------------- --}}
  <body>
	{{#with header}}
    <header>
      <div>
        <h1>{{name.firstname}} {{name.lastname}}</h1>

      </div>
      	<div>
        	<b>{{position}}</b>
		</div>
		<br>
		<div>
			<em>
				{{salary}}
			</em>
		</div>
		<br />
		<div>
			<address>
				{{address}}
			</address>		
		</div>
		<br />
      <hr />
    </header>
	{{/with}}
	{{> nav}}
    {{{body}}}
	{{> footer address=header.address firstname=header.name.firstname lastname=header.name.lastname}}
  </body>
</html>