<header class='header'>
  <h1 class='header_title'>{{occupation}}</h1>
  <p class='header_name'>{{name}} {{lastname}}</p>
  <div class='header_info'>
    <div class='header_info_item'>
      <span
        class='icon'
        style="background-image: url('/svg/mail.svg');"
      ></span>
      <span class='header_info_text'>{{email}}</span>
    </div>
    <div class='header_info_item'>
      <span
        class='icon'
        style="background-image: url('/svg/phone.svg');"
      ></span>
      <span class='header_info_text'>{{phone}}</span>
    </div>
    <div class='header_info_item'>
      <span
        class='icon'
        style="background-image: url('/svg/point.svg');"
      ></span>
      <span class='header_info_text'>{{address}}</span>
    </div>
  </div>
</header>

<div class='content'>

  <aside class='aside'>
    <div class='block'>
      <span class='block_title'>Personal details</span>
      <div class='block_content ico__pos'>
        <div
          class='ico'
          style="background-image: url('./svg/link.svg');"
        ></div>
        {{! <span class='block_info'>LinkedIn</span> }}
        <a
          href='https://www.linkedin.com/in/sergii-dovgopol-5720a6278/'
          class='block_text'
        >{{linkedIn}}</a>
      </div>
      <div class='block_content ico__pos'>
        <div
          class='ico'
          style="background-image: url('./svg/git.svg');"
        ></div>
        {{! <span class='block_info'>GitHub</span> }}
        <a
          href='https://github.com/dsRepo-cmd'
          class='block_text'
        >{{site}}</a>
      </div>
    </div>
    <hr />
    <div class='block'>
      {{#with skills}}
        <span class='block_title'>{{title}}</span>
        <ul class='block_list'>

          {{#each skill}}
            <li>
              <span class='block_text'>{{this}}</span>
            </li>
          {{/each}}
        </ul>
      {{/with}}
    </div>

    <hr />

    {{#with languages}}
      <div class='block'>
        <span class='block_title'>{{title}}</span>
        {{#each content}}
          <span class='block_name'>{{name}}:
            {{value}}
          </span>
          <div class='block_list'>
            <span class='block_text'>{{text}}</span>
          </div>
        {{/each}}
      </div>
    {{/with}}
    <hr />
    {{#with educations}}
      <div class='block'>
        <span class='block_title'>{{title}}</span>
        {{#each content}}
          <span class='block_name'>{{name}}</span>
          <div class='block_list'>
            <span class='block_text'>{{text}}</span>
          </div>
        {{/each}}
      </div>
    {{/with}}

  </aside>

  <main>
    {{#with summary}}
      <div class='block'>
        <span class='block_title'>{{title}}</span>
        <div class='block_list'>
          <span class='block_text'>{{text}}</span>
        </div>
      </div>
    {{/with}}

    <hr />

    {{#with projects}}
      <div class='block'>
        <span class='block_title'>{{title}}</span>
        {{#each content}}
          <span class='block_name'>{{name}}</span>
          <div class='block_list'>
            <ul>
              {{#each text}}
                <li>
                  <span class='block_text'>{{this}}</span>
                </li>
              {{/each}}
            </ul>
          </div>
        {{/each}}
      </div>
    {{/with}}

    <hr />

    {{#with hobbies}}
      <div class='block'>
        <span class='block_title'>{{title}}</span>
        {{#each content}}
          <span class='block_name'>{{name}}</span>
          <div class='block_list'>
            <ul>
              {{#each text}}
                <li>
                  <span class='block_text'>{{this}}</span>
                </li>
              {{/each}}
            </ul>
          </div>
        {{/each}}
      </div>
    {{/with}}

  </main>

</div>