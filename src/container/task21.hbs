<main>
  {{! heading_______________________________________________________________ }}
  {{#with heading}}
    {{#with main}}
      <div class='card'>
        <div class='card-body'>
          <div class='display-5'>{{title}}</div>
          <div>
            {{text}}
          </div>
          <br />
          <div>
            <button
              class='btn btn-primary'
            >{{button_text.solid}} </button>
          </div>
          <br />
          <div>
            <button
              class='btn btn-outline-primary'
            >{{button_text.outline}} </button>
          </div>
        </div>
      </div>
      <br />
    {{/with}}
    {{#with second}}
      <div class='card'>
        <div class='card-body'>
          <div class='display-5'>{{title}}</div>
          <div>
            {{text}}
          </div>
          <br />
          <div>
            <button
              class='btn btn-secondary'
            >{{button_text.solid}} </button>
          </div>
          <br />
          <div>
            <button
              class='btn btn-outline-secondary'
            >{{button_text.outline}} </button>
          </div>
        </div>
      </div>
    {{/with}}
    <br />
    {{#with subblock}}
      <div class='card'>
        <div class='card-body'>
          <div class='display-5'>{{title}}</div>
          <div>
            {{text}}
          </div>
          <br />
          <div>
            <button
              class='btn btn-dark'
            >{{button_text.solid}} </button>
          </div>
          <br />
          <div>
            <button
              class='btn btn-outline-dark'
            >{{button_text.outline}} </button>
          </div>
        </div>
      </div>
    {{/with}}
  {{/with}}
  <br />
  <hr />
  <br />
  {{! nested_display_______________________________________________________________________________ }}
  {{#with nested_display}}
    <div class='display-1'>
      {{title}}
    </div>
    {{#with children_display}}
      <div class='card'>
        <div class='card-body'>
          <div class='display-4'>{{title}}</div>
          <p>{{text}}</p>
          <button class='btn btn-warning'>{{button.text}}
          </button>
        </div>
      </div>
      <br />
    {{/with}}
    <div class='display-6'>{{header_text}}</div>
    <br />
    <div>
      <button class='btn btn-info'>{{button.text}}</button>
    </div>
  {{/with}}
  {{! paragraph_______________________________________________________________________________ }}
  <br />
  <hr />
  <br />
  {{#with paragraph}}

    <p class='text-uppercase'>{{title}}</p>
    <p class='text-lowercase'>{{text}}</p>
    <div>

      <a
        href='{{button.url}}'
        class='btn btn-link'
        target='_blank'
      >{{button.text}} </a>
    </div>
    <br />
    <div class='card'>
      <div class='card-body'>
        {{#each list_name}}
          <ul>
            <li>
              <a
                href='{{url}}'
                class='btn btn-link'
                target='_blank'
              >{{text}} </a>
            </li>
          </ul>
        {{/each}}
      </div>
    </div>
  {{/with}}
</main>