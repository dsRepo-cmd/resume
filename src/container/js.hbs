<div class='row'>
  <dl>
    <dt><h2>{{name}}</h2></dt>
    <dd class='p-3 g-col-6'>
      {{description}}
      <div>
        <i>
          {{history.founder}}
          ({{history.year}})
        </i>
      </div>
    </dd>
  </dl>
  <div class='col-2'>
    <div class='card'>
      <div class='card-header'>
        <h4>Types</h4>
      </div>
      <div class='card-body'>
        <ul>
          {{#each types}}
            <li>
              {{this}}
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class='col-2'>
    {{#with syntax}}
      <div class='card'>
        <div class='card-header'>
          <h4>Syntax</h4>
        </div>
        <div class='card-body'>
          <h5>Variables</h5>
          <ul>
            {{#each variables}}
              <li>
                {{this}}
              </li>
            {{/each}}
          </ul>
          <h5>Functions</h5>
          <ul>
            {{#each functions}}
              <li>
                {{this}}
              </li>
            {{/each}}
          </ul>
          <h5>Conditionals</h5>
          <ul>
            {{#each conditionals}}
              <li>
                {{this}}
              </li>
            {{/each}}
          </ul>
          <h5>Loops</h5>
          <ul>
            {{#each loops}}
              <li>
                {{this}}
              </li>
            {{/each}}
          </ul>
          <h5>Classes</h5>
          <ul>
            {{#each classes}}
              <li>
                {{this}}
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    {{/with}}
  </div>
  <div class='col-2'>
    <div class='card'>
      <div class='card-header'>
        <h4>Features</h4>
      </div>
      <div class='card-body'>
        <ul>
          {{#each features}}
            <li>
              {{this}}
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class='col-2'>
    <div class='card'>
      <div class='card-header'>
        <h4>Libraries</h4>
      </div>
      <div class='card-body'>
        <ul>
          {{#each libraries}}
            <li>
              {{this}}
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class='col-2'>
    <div class='card'>
      <div class='card-header'>
        <h4>Tools</h4>
      </div>
      <div class='card-body'>
        <ul>
          {{#each tools}}
            <li>
              {{this}}
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  <div class='col-2'>
    <div class='card'>
      <div class='card-header'>
        <h4>Community</h4>
      </div>
      <div class='card-body'>
        <ul>
          {{#each community}}
            <li>
              {{name}}
              <div>
                ({{type}})
              </div>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>