<h1 class="mb-5">{{header}}</h1>
{{#with purchase}}
  <div class='nav nav-tabs mb-4'>
    {{#each tabs}}
      <div class='nav-item'>
        <a class='nav-link {{#if @first}}active{{/if}}' href='#'> {{this}}</a>
      </div>
    {{/each}}
  </div>
  {{#with actionBlock}}
    <div class='col-3 pb-5'>
      <input
        placeholder='{{input.placeholder}}'
        type='text'
        name=''
        id=''
        class='form-control'
      />
    </div>
    <div class='col-9'>
      {{#each buttons}}
        <a class='me-1 btn {{#if isSuccess}}btn-success{{/if}} {{#if isOutline}}btn-outline-success{{/if}}{{#if isDanger}}btn-outline-danger{{/if}} ' href='{{link}}'>{{text}}</a>
      {{/each}}
    </div>
  {{/with}}
  <hr>
{{>purchaseItem}}

{{/with}}
{{#with userInfo}}
  <h2 class='mb-5'>{{title}}</h2>
  <div class='col-12 mb-2'>
    <div class='card p-2'>
      <div class='row p-3'>
        {{#with profileData}}
          <h3 class='mb-4'>{{title}}</h3>
          <div class='col-4'>
            <div>{{fullName.surname.title}}</div>
            <h6>{{fullName.surname.value}}</h6>
          </div>
          <div class='col-4'>
            <div>{{fullName.name.title}}</div>
            <h6>{{fullName.name.value}}</h6>
          </div>
          <div class='col-4'>
            <div>{{fullName.middleName.title}}</div>
            <h6>{{fullName.middleName.value}}</h6>
          </div>
          <div class='col-4'>
            <div>{{otherInfo.birthday.title}}</div>
            <h6>{{otherInfo.birthday.value}}</h6>
          </div>
          <div class='col-4'>
            <div>{{otherInfo.sex.title}}</div>
            <h6>{{otherInfo.sex.value}}</h6>
          </div>
          <div class='col-4'>
            <div>{{otherInfo.language.title}}</div>
            <h6>{{otherInfo.language.value}}</h6>
          </div>
        {{/with}}
        {{#each buttons}}
          <div class='col-4 mt-3'>
            <a href='{{link}}' class="btn {{#if isPrimary}}btn-primary{{/if}}{{#if isSecondary}}btn-outline-secondary{{/if}}{{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</a>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
  <div class='col-12 mb-2'>
    <div class='card p-2'>
      <div class='row p-3'>
        {{#with recipients}}
          <h3 class='mb-4'>{{title}}</h3>
          {{#each users}}
            <div class='col-4'>
              <h6>{{name}}</h6>
              <p>{{phone}}</p>
              <div>
                <a
                  class='btn btn-primary'
                  href='{{button.link}}'
                >{{button.text}}</a>
              </div>
            </div>
          {{/each}}
        {{/with}}
      </div>
    </div>
  </div>
  <div class='col-12 mb-2'>
    <div class='card p-2'>
      <div class='row p-3'>
        {{#with contacts}}
          <h3 class='mb-4'>{{title}}</h3>
          {{#with contactData}}
            <div class='col-4'>
              <h6>{{phone.title}}</h6>
              <p>{{phone.value}}</p>
            </div>
            <div class='col-4'>
              <h6>{{additionalPhone.title}}</h6>
              <p>{{additionalPhone.value}}</p>
            </div>
            <div class='col-4'>
              <h6>{{email.title}}</h6>
              <p>{{email.value}}</p>
            </div>
          {{/with}}
          {{#each buttons}}
            <div class='col-4'>
            <a href='{{link}}' class="btn {{#if isPrimary}}btn-primary{{/if}}{{#if isSecondary}}btn-outline-secondary{{/if}}{{#if isDanger}}btn-outline-danger{{/if}}">{{text}}</a>
            </div>
          {{/each}}
        {{/with}}
      </div>
    </div>
  </div>
{{/with}}