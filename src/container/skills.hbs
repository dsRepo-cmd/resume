<div>
	{{#with main}}
  <main>
    <section>
		{{>title data="My works" big=true}}
      <ul>
		{{#each skills}}
        <li>
          {{name}} 
            {{#if point includeZero=true}} ({{point}}) {{/if}}
            {{#if isTop}} (Top) {{/if}}
            {{#unless point includeZero=true}} (not actual) {{/unless}}
            {{#unless point}} 
              {{#if point includeZero=true}}
                (in process) 
              {{/if}}
            {{/unless}}
        </li>
		{{/each}}
      </ul>
      </section>
      <section>
      		{{>title data="My hobbies"   }}
      <ol>
		{{#each hobbies}}
        <li>
          {{name}} 
          {{#if isMain}} (favourite) {{/if}}
        </li>
		{{/each}}
      </ol>
    </section>
  </main>
	{{/with}}
</div>