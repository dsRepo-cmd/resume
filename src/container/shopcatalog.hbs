{{>breadcrumb}}
{{! sortBlock_____________________________________________________________________________ }}
<h1>{{header}}</h1>
<div class='col-12 mb-5'>
  <div class='row'>
    {{#each sortBlock}}
      <div class='col-3'>
        <select class='form-select' name='' id=''>
          <option value='0'>{{placeholder}}</option>
          {{#each options}}
            <option value='{{value}}'>{{text}}</option>
          {{/each}}
        </select>
      </div>
    {{/each}}
  </div>
</div>
{{! filterBlock_____________________________________________________________________________ }}
{{#with filterBlock}}
  <div class='col-4'>
    <div class='card p-3'>
      <p>{{sellers.title}}</p>
      {{#each sellers.list}}
        <div class='form-check my-2'>
          <label for=''>{{value}}</label>
          <input class='form-check-input' type='checkbox' />
        </div>
      {{/each}}
      <hr />
      <p>{{brands.title}}</p>
      <input
        placeholder='{{brands.input.placeholder}}'
        type='text'
        name=''
        id=''
        class='form-control'
      />
      {{#each brands.options}}
        <div class='form-check my-2'>
          <label for=''>{{value}}</label>
          <input class='form-check-input' type='checkbox' />
        </div>
      {{/each}}
      <hr />
      <p>{{price.title}}</p>
      <div class='row'>
        <div class='col-4'>
          <input
            placeholder='{{price.range.from}}'
            type='text'
            name=''
            id=''
            class='form-control'
          />
        </div>
        <div class='col-4'>
          <input
            placeholder='{{price.range.to}}'
            type='text'
            name=''
            id=''
            class='form-control'
          />
        </div>
        <div class='col-4'>
          <a
            class='btn btn-outline-secondary px-3'
            href='{{price.button.link}}'
          > {{price.button.text}} </a>
        </div>
      </div>
      {{#each filterList}}
              <hr />
        <p>{{title}}</p>
        {{#each options}}
          <div class='form-check my-2'>
            <label for=''>{{value}}</label>
            <input
              class='form-check-input'
              type='checkbox'
            />
          </div>
        {{/each}}
      {{/each}}
    </div>
  </div>
{{/with}}
{{! goodsList_____________________________________________________________________________ }}
<div class='col-8'>
    {{>catalogItem}}
</div>
{{>shopaction}}