<div class='col-9'>
  <h1>{{header.title}}</h1>
</div>
<div class='col-3'>
  <a
    target='_blank'
    class='btn btn-outline-secondary'
    href='{{header.button.link}}'
  >{{header.button.text}}</a>
</div>
{{! goodsBlock________________________________________________________________ }}
{{> cartGoodsItem}}
{{! total_________________________________________________________________________________ }}
<hr class='my-5' />
<div class='col-8'>
  <h3>{{total.title}}</h3>
  <h1>{{total.amount}}</h1>
  <p>{{total.delivery}}</p>
</div>
<div class='col-4'>
  {{#each total.buttons}}
    <div>
      <a target="_blank" class='mt-3 btn {{#if isSuccess}}btn-success{{/if}} {{#if isOutline}}btn-outline-success{{/if}}' href='{{link}}'>{{text}}</a>
    </div>
  {{/each}}
</div>
{{! goodsOtherBlock______________________________________________________________________________ }}
<hr class='my-5' />
{{#with goodsOtherBlock}}{{/with}}
  {{#with subscribe}}
      <div class='card text-bg-dark p-3 pe-0'>
        <div class='row'>
          <div class='col-8'>
            <h2>{{header}}</h2>
            {{description}}
          </div>
          <div class='col-4 '>
            {{#each buttons}}
              <a
                target='_blank'
                rel='{{rel}}'
                class='btn btn-primary ms-1 mt-3'
                href='{{link}}'
              >{{text}}</a>
            {{/each}}
          </div>
        </div>
      </div>
  {{/with}}