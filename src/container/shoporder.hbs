<h1 class='mb-3'>{{header}}</h1>
<div class='col-12'>
  <div class='row'>
    {{#with contacts_data}}
      <div class='col-8'>
      <h2 class='my-4'>{{title}}</h2>
      {{#each buttons}}
        <button class="btn {{#if isPrimary}}btn-warning{{/if}} {{#if isOutline}}btn-outline-warning{{/if}} me-3 mb-4">{{text}}</button>
      {{/each}}
      {{#with form}}
        <div class='row'>
          {{#with input}}
            <div class='col-6'>
              {{#with surname}}
                <label
                  for=''
                  class='form-label h6'
                >{{lable}}</label>
                <input
                  type='text'
                  placeholder='{{placeholder}}'
                  class='form-control'
                />
                <div
                  class='form text mb-4'
                ><small class="text-muted">{{caption}}</small></div>
              {{/with}}
              {{#with phone}}
                <label
                  for=''
                  class='form-label h6'
                >{{lable}}</label>
                <input
                  type='text'
                  placeholder='{{placeholder}}'
                  class='form-control'
                />  
                <div class='form text'><small class="text-muted">{{caption}}</small></div>
              {{/with}}
            </div>

            <div class='col-6'>
              {{#with name}}
                <label
                  for=''
                  class='form-label h6'
                >{{lable}}</label>
                <input
                  type='text'
                  placeholder='{{placeholder}}'
                  class='form-control'
                />
                <div
                  class='form text mb-4'
                ><small class="text-muted">{{caption}}</small></div>
              {{/with}}
              {{#with email}}
                <label
                  for=''
                  class='form-label h6'
                >{{lable}}</label>
                <input
                  type='text'
                  placeholder='{{placeholder}}'
                  class='form-control'
                />
                <div class='form text'><small class="text-muted">{{caption}}</small></div>
              {{/with}}
            </div>
          {{/with}}
        </div>
        <hr class='my-5' />
        <div class='col-12'>
          {{#each switch}}
            <div class='form-check form-switch mb-3'>
              <label
                class='form-check-lable'
              >{{text}}</label>
              <input
                name='1'
                type='checkbox'
                class='form-check-input'
              />
            </div>
          {{/each}}
          <hr class='my-5' />
        </div>
      {{/with}}
    {{/with}}
{{! delivery___________________________________________________________________ }}
    {{#with delivery}}
      <h2 class="mb-3">{{title}}</h2>
      <div class='card'>
        <div class='row p-3'>
          {{#each select}}
            <div class='col-6'>
              <label for='' class='form-label h6'>
                {{label}}</label>
              <select class='form-select' name='' id=''>
                <option selected
                  value='placeholder'
                >{{placeholder}}</option>
                {{#each options}}
                  <option  value='value'>{{text}}</option>
                {{/each}}
              </select>
            </div>
          {{/each}}
        </div>
      </div>
      <div class='row mt-4'>
        {{#each delivery_type}}
          <div class='col-6 my-2'>
            <div class='form-check'>
              {{type}}
              <input
                name='deliveryButton'
                type='radio'
                class='form-check-input'
              />
            </div>
          </div>
          <div class='col-6'>
            <div class=" text-end">{{value}}</div>
          </div>
        {{/each}}
      </div>
      <hr class='my-5' />
{{!Оплата_____________________________________________________________________ }}
      <h2 class='mb-3'>Оплата</h2>
      {{#each payment}}
        <div class='form-check h6'>
          {{type}}
          <input
            name='deliveryButton'
            type='radio'
            class='form-check-input'
          />
        </div>
        <div class='form text mb-4'><small class="text-muted">{{description}}</small></div>
      {{/each}}
      <hr class='my-5' />
{{!Контактні дані отримувача_____________________________________________________________________ }}
      {{#with contact}}
        <div class='col-12'>
          <h2 class="mb-3">Контактні дані отримувача</h2>
          <div class='row'>
            <div class='col-6'>
              {{#with surname}}
                <label
                  for=''
                  class='form-label h6'
                >{{lable}}</label>
                <input
                  type='text'
                  placeholder='{{placeholder}}'
                  class='form-control'
                />
                <div
                  class='form text mb-4'
                ><small class="text-muted">{{caption}}</small></div>
              {{/with}}
              {{#with phone}}
                <label
                  for=''
                  class='form-label h6'
                >{{lable}}</label>
                <input
                  type='text'
                  placeholder='{{placeholder}}'
                  class='form-control'
                />
                <div class='form text'><small class="text-muted">{{caption}}</small></div>
              {{/with}}
            </div>
            <div class='col-6'>
              {{#with name}}
                <label
                  for=''
                  class='form-label h6'
                >{{lable}}</label>
                <input
                  type='text'
                  placeholder='{{placeholder}}'
                  class='form-control'
                />
                <div
                  class='form text mb-4'
                ><small class="text-muted">{{caption}}</small></div>
              {{/with}}
              {{#with email}}
                <label
                  for=''
                  class='form-label h6'
                >{{lable}}</label>
                <input
                  type='text'
                  placeholder='{{placeholder}}'
                  class='form-control'
                />
                <div class='form text'><small class="text-muted">{{caption}}</small></div>
              {{/with}}
            </div>
          </div>
        </div>
        <hr class='my-5' />
      {{/with}}
{{!Коментар_____________________________________________________________________ }}
      <div>
        {{#with coment}}
          <label for='' class='form-label h6'>{{lable}}</label>
          <input
            type='text'
            placeholder='{{placeholder}}'
            class='form-control'
          />
        {{/with}}
      </div>
      <hr class='my-5' />
    {{/with}}
{{!coupon_____________________________________________________________________ }}
    <h2 class="mb-3">Купони</h2>
    {{#with coupon}}
      {{#with select}}
        {{#with available_coupon}}
          <div class='col-12 mb-4'>
            <label for='' class='form-label h6'>
              {{lable}}</label>
            <select
              class='form-select form-select-lg'
              name=''
              id=''
            >
              <option selected
                value='placeholder'
              >{{placeholder}}</option>
              {{#each options}}
                <option value='value'>{{text}}</option>
              {{/each}}
            </select> 
          </div>
        {{/with}}
        {{#with friend_coupon}}
          <div class='col-12 mb-4 h6'>
            <label for='' class='form-label'>
              {{lable}}</label>
            <select class='form-select form-select-sm' name='' id=''>
              <option selected
                value='placeholder'
              >{{placeholder}}</option>
              {{#each options}}
                <option value='value'>{{text}}</option>
              {{/each}}
            </select>
          </div>
        {{/with}}
      {{/with}}
      {{#with add}}
        {{#with friend}}
          <div class='col-12 mb-4'>
            <label for='' class='form-label h6'>{{lable}}</label>
            <input placeholder="{{placeholder}}" class="form-control form-control-lg" name="" id="">
              <small class="text-muted">{{caption}}</small>
            </input>
          </div>
        {{/with}}
        {{#with colleague}}
          <div class='col-12 my-3'>
            <label for='' class='form-label h6'>{{lable}}</label>
            <input placeholder="{{placeholder}}" class="form-control form-control-sm" name="" id="">
              <small class="text-muted">{{caption}}</small>
            </input>
          </div>
        {{/with}}
      {{/with}}
    {{/with}}
    <hr class='my-5' />
{{! quiz___________________________________________________________________ }}
    {{#with quiz}}
      <h2 class="mb-3">{{title}}</h2>
      {{#with preference}}
        <div class="mt-4 h6">{{title}}</div>
        {{#each options}}
          <div class='form-check my-2'>
            <label for=''>{{this}}</label>
            <input
              name='1'
              type='radio'
              class='form-check-input'
            />
          </div>
        {{/each}}
      {{/with}}
      {{#with your_expirience}}
        <div class='col-12  mt-4 '>
          <label for='' class='form-label h6'>
            {{label}}</label>
            <input placeholder="" class="form-control form-control-lg " name="" id=""></input>
        </div>
      {{/with}}
      {{#with purchase_frequency}}
        <div class='col-12 mt-4'>
          <div class="h6">{{label}}</div>
          <select name='' id='' class='form-select'>
            <option selected value=''>{{placeholder}}</option>
            {{#each options}}
              <option value='{{value}}'>{{text}}</option>
            {{/each}}
          </select>
        </div>
      {{/with}}
      {{#with factors}}
        <div class="mb-3 mt-4 h6">{{title}}</div>
        {{#each options}}
          <div class='form-check my-2'>
            <label for=''>{{this}}</label>
            <input
              class='form-check-input'
              type='checkbox'
            />
          </div>
        {{/each}}
      {{/with}}
    {{/with}}
  </div>
{{! _______________________________________________________________________ }}
  <div class='col-4 mt-4'>
    <div class='row'>
      <div class='col-12'>
        <div class='card p-1'>
          {{#each action_block}}
            <div>
              <button class="btn {{#if isPrimary}}btn-success{{/if}} {{#if isDanger}}btn-Danger{{/if}} {{#if isInfo}}btn-info{{/if}} m-2">{{text}}</button>
            </div>
          {{/each}}
        </div>
      </div>
      <div class='col-12 mt-3'>
        {{#with total}}
          <div class='card'>
            <div class='card-body'>
              <div class='card-title'>

                <h2>{{title}}</h2>
              </div>
              <ul class='list-group list-group-flush'>
                <li class='list-group-item'>
                  {{#each item_list}}
                    <div>
                      {{name}}:
                      {{price}}
                    </div>
                  {{/each}}
                </li>
                <li class='list-group-item'>
                  {{#each additional_info}}
                    <div>
                      {{text}}:
                      {{value}}
                    </div>
                  {{/each}}
                </li>
                <li class='list-group-item'>
                  {{#with total_price}}
                    <div>
                      <h6> {{text}}: {{value}}</h6>
                    </div>
                  {{/with}}
                </li>
                <li class='list-group-item'>
                  {{#each button}}
                    <div>
                      <button class="btn {{#if isPrimary}}btn-primary{{/if}} {{#if isOutline}}btn-outline-primary{{/if}}  m-2">{{text}}</button>
                    </div>
                  {{/each}}
                </li>
              </ul>
            </div>
          </div>
          {{/with}}
        </div>
      </div>
    </div>
  </div>
</div> 