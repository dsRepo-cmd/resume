{{! navigation__________________________________________________________________________________ }}
{{#with navigation}}
  <div class='col-8'>
    <h1>{{Logo}}</h1>
  </div>
  <div class='col-4'>
    <div class='nav'>
      {{#each links}}
        {{#if href}}
          <div class='nav-item'>
            <a
              href='{{href}}'
              class='nav-link'
              target='_blank'
            >{{text}}</a>
          </div>
        {{else}}
          <div class='nav-item'>
            <a
              href='#'
              class='nav-link disabled'
            >{{text}}</a>
          </div>
        {{/if}}
      {{/each}}
    </div>
  </div>
{{/with}}
<hr class='my-2 mb-5' />