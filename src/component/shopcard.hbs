{{#each cards}}
  <div class='col-4'>
    <div class='card'>
      <img src='{{image}}' alt='' />
      <div class='card-body'>
        <h5>{{title}}
          {{#if isHot}}
            <span
              class='badge text-bg-warning rounded-pill'
            >HOT!</span>
          {{/if}}
          {{#if idNew}}
            <span
              class='badge text-bg-primary rounded-pill'
            >New</span>
          {{/if}}
        </h5>
        <p>{{description}}</p>
      </div>
    </div>
  </div>
{{/each}}